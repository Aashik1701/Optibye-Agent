# EMS Agent Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DATABASE=EMS_Database

# Redis Configuration (Optional - for development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Service Configuration
ENVIRONMENT=development
MICROSERVICES_MODE=false
SERVICE_TYPE=gateway

# Service URLs (for microservices mode)
ANALYTICS_SERVICE_URL=http://localhost:8001
ADVANCED_ML_SERVICE_URL=http://localhost:8002
MONITORING_SERVICE_URL=http://localhost:8003
DATA_INGESTION_SERVICE_URL=http://localhost:8004

# Security Configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production
ADMIN_PASSWORD=admin123

# API Keys (if using external services)
GEMINI_API_KEY=your-gemini-api-key-here

# Logging
LOG_LEVEL=INFO
DEBUG=false

# Monitoring (Optional)
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=admin

# Notification Services (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Docker Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123

# Application Settings
APP_NAME=EMS Agent
APP_VERSION=2.0.0
PORT=5004

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Upload Settings
MAX_UPLOAD_SIZE=50MB
ALLOWED_EXTENSIONS=xlsx,csv,json
